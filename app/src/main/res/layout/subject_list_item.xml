<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subject_item_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/subject_list_margin"
    android:layout_marginBottom="@dimen/subject_list_margin"
    android:layout_marginStart="@dimen/subject_list_margin"
    android:orientation="vertical" >

    <Button
        style="@style/TodoTreeButtonBarStyle"
        android:id="@+id/subject_item_btn_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/base_subject"/>

</LinearLayout>
