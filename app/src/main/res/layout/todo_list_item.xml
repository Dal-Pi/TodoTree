<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/todo_item_margin_padding"
        android:layout_marginEnd="@dimen/todo_item_margin_padding"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/todo_item_margin_padding" >
            <TextView
                android:id="@+id/item_text_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:visibility="gone"
                android:textSize="@dimen/todo_date_text_size"
                android:text="@string/item_due_date_defualt"/>
            <View
                android:id="@+id/item_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:visibility="gone"
                android:background="@color/pastel_gray" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/item_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:paddingStart="@dimen/todo_item_margin_padding"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/item_checkbox_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/todo_item_margin_padding"
                android:paddingBottom="@dimen/todo_item_margin_padding"
                android:paddingStart="@dimen/todo_item_margin_padding"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
            <Button
                style="@style/TodoTreeButtonBarStyle"
                android:id="@+id/item_btn_handle_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="@string/item_menu_btn_delete"/>
            <TextView
                android:id="@+id/item_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:paddingTop="@dimen/todo_item_margin_padding"
                android:paddingBottom="@dimen/todo_item_margin_padding"
                android:layout_toEndOf="@id/item_checkbox_todo"
                android:layout_toStartOf="@id/item_btn_handle_todo"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/item_layout_select_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/item_layout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <TextView
                    android:id="@+id/item_text_last_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="@dimen/todo_date_text_size"
                    android:text="@string/item_last_update_defualt"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    style="@style/TodoTreeButtonBarStyle"
                    android:id="@+id/item_btn_add_sub_todo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/item_menu_btn_add_sub_todo"/>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/select_layout_start_margin"
                    android:layout_toStartOf="@id/item_btn_add_sub_todo" >
                    <EditText
                        style="@style/TodoTreeEditStyle"
                        android:id="@+id/item_edit_sub_todo_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/item_menu_add_sub_todo_hint"/>
                </android.support.design.widget.TextInputLayout>
                <TextView
                    android:id="@+id/item_text_selected_id_debug"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/text_margin"
                    android:layout_marginEnd="@dimen/text_margin"
                    android:layout_toLeftOf="@id/item_btn_add_sub_todo"
                    android:layout_centerVertical="true"
                    android:text="selected"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>