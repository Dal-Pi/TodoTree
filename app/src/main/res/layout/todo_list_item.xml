<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/todo_item_margin_padding"
        android:layout_marginEnd="@dimen/todo_item_margin_padding"
        android:layout_marginBottom="@dimen/todo_item_margin_padding"
        android:orientation="vertical">
        <View
            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/pastel_gray" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/item_text_due_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="@string/item_due_date_defualt"/>
            <TextView
                android:id="@+id/item_text_last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="@string/item_last_update_defualt"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/todo_item_margin_padding"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatCheckBox
                android:id="@+id/item_checkbox_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/todo_item_margin_padding"
                android:paddingBottom="@dimen/todo_item_margin_padding"
                android:paddingLeft="@dimen/todo_item_margin_padding"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />
            <Button
                android:id="@+id/item_btn_finish_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="@string/item_menu_finish_todo"/>
            <TextView
                android:id="@+id/item_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:paddingTop="@dimen/todo_item_margin_padding"
                android:paddingBottom="@dimen/todo_item_margin_padding"
                android:layout_toEndOf="@id/item_checkbox_todo"
                android:layout_toStartOf="@id/item_btn_finish_todo"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_layout_select_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" >
            <Button
                android:id="@+id/item_btn_add_sub_todo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:text="@string/item_menu_add_sub_todo"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/item_btn_add_sub_todo"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/text_margin"
                android:lines="1"
                android:inputType="text" />

            <TextView
                android:id="@+id/item_text_selected_id_debug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/text_margin"
                android:layout_marginEnd="@dimen/text_margin"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="selected"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>